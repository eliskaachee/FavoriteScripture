<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Book"
        android:id="@+id/favoriteBook"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favoriteBookInput"
        android:layout_below="@+id/favoriteBook"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:inputType="textCapWords"
        android:layout_marginTop="20dp"
        android:width="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chapter"
        android:id="@+id/favoriteChapter"
        android:layout_below="@+id/favoriteBookInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favoriteChapterInput"
        android:layout_below="@+id/favoriteChapter"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:width="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Verse"
        android:id="@+id/favoriteVerse"
        android:layout_below="@+id/favoriteChapterInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favoriteVerseInput"
        android:layout_below="@+id/favoriteVerse"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:width="200dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop = "30dp"
        android:text="Submit"
        android:id="@+id/displayScriptureButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/favoriteVerseInput"
        android:onClick="displayScripture"/>

</RelativeLayout>
